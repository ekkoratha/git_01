{
  "name": "test-json-transform",
  "config": {
    "connector.class": "org.apache.kafka.connect.tools.MockSinkConnector",
    "tasks.max": "1",
    "topics": "user-topic",
    "transforms": "toCsv",
    "transforms.toCsv.type": "com.example.kafka.transforms.FlattenNestedJsonTransform",
    "transforms.toCsv.fields": "user.id,user.name,address.street,address.city,scores[0],scores[1],tags",
    "transforms.toCsv.delimiter": "|",
    "transforms.toCsv.handle.arrays": "concat",
    "transforms.toCsv.array.delimiter": ",",
    "transforms.toCsv.null.value": "",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false"
  }
}